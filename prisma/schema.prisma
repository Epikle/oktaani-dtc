generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Dtc {
  id              String  @id @default(cuid())
  codeTitle       String  @unique
  codeDescription String
  codeLocation    String?
  systemCode      String
  systemTitle     Systems
  systemName      String
  views           Int     @default(0)
  gptInfo         String?
}

enum Systems {
  Powertrain
  Network
  Body
  Chassis
}
