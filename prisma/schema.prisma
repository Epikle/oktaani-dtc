// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Dtc {
  id     String @id @default(auto()) @map("_id") @db.ObjectId
  code   Code
  system System
}

type Code {
  title       String
  description String
  location    String?
}

type System {
  subCode String
  title   Systems
  subName String
}

enum Systems {
  Powertrain
  Network
  Body
  Chassis
}
